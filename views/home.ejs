
<link rel="stylesheet" href="/css/home.css">

<div id="home-container">
 <section id="feed-posts">
     <h3>Posts</h3>
     <!-- if condition is added for authentication purpose -->
     <!-- one can't see the form if he is not logged in -->
     <% if(locals.user){ %>
     <form action="/posts/create" id="new-post-form" method="POST">
       <textarea name="content" cols="30" rows="3" placeholder="What's on your mind..??" required></textarea>
       <input type="submit" value="Post">


    </form>
    <% } %>
 <div id="posts-list-container">
     <ul>
 <% for( post of posts ){ %>
    <!-- using parials  here -->
    <%- include('_post'); %>
<% }  %>
     </ul>
 </div>
 </section>
 <section id="user-friends">
   <h4>Friends</h4>
   <% for(u of all_users){ %>
    <a href="/users/profile/<%= u._id%>">
         <!--displaying all the users  -->
        <div>
            <%= u.name%>
        </div>
   
    </a>


   <% } %>
 </section>
 </div>
 <script src="/js/home_comments.js"></script>
<script src="/js/home_posts.js"></script>
